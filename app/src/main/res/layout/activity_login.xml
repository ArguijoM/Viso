<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_registro"
    tools:context=".ui.cuenta.registro.adulto.Login"
    android:background="@color/primary01">
    <LinearLayout
        android:layout_width="@dimen/main_layout_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="@dimen/text_03"
        android:orientation="vertical">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_progressbar">
        </ProgressBar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title01"
            android:textStyle="bold"
            android:id="@+id/login_head"
            android:fontFamily="@font/autour_one"
            android:text="¡Inicia sessión!"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/gloves_heart_2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_heigh"
            android:id="@+id/correo_adulto"
            android:background="@drawable/roundededittext"
            android:hint="Ingresa tu correo"
            android:paddingLeft="@dimen/edit_text_padding"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_between01"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_heigh"
            android:id="@+id/contrasena_adulto"
            android:background="@drawable/roundededittext"
            android:hint="Ingresa la contraseña"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/edit_text_padding"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_between02"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_siguiente"
            android:text="Siguiente"
            android:background="@drawable/roundedbutton"/>
    </LinearLayout>

</LinearLayout>