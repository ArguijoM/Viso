<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/text_03"
    android:background="@color/primary01"
    tools:context=".ui.actividad.instruccion.InstruccionFragment2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_03"
        android:paddingLeft="@dimen/text_02"
        android:paddingRight="@dimen/text_02"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/instruccion_text"
            android:text="@string/instruccion2"
            android:textColor="@color/white"
            android:fontFamily="@font/autour_one"
            android:textSize="@dimen/text_04" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/gif_wrong"/>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/gif_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_weight="2">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:id="@+id/ic_phone_hor"
            android:src="@drawable/ic_phone_hor"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/ic_phone_ver"
            android:src="@drawable/ic_phone_ver"/>
    </LinearLayout>

</LinearLayout>