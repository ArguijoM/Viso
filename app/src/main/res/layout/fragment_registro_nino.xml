<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_registro"
    tools:context=".ui.cuenta.registro.nino.CuentaRegistroNinoFragment"
    android:background="@color/primary01">
    <LinearLayout
        android:layout_width="@dimen/main_layout_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="@dimen/text_02"
        android:gravity="top"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/text_01"
            android:textSize="@dimen/text_title01"
            android:textStyle="bold"
            android:fontFamily="@font/autour_one"
            android:text="¡Registro del niño!"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/text_03">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/layout_boy"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_image_boy"
                    android:src="@drawable/ic_boy1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_girl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_image_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_girl1" />
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_heigh"
            android:id="@+id/nombre_nino"
            android:background="@drawable/roundededittext"
            android:hint="Ingresa el nombre del niño"
            android:paddingLeft="@dimen/edit_text_padding"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_between01"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_heigh"
            android:id="@+id/apellido_nino"
            android:background="@drawable/roundededittext"
            android:hint="Ingresa el apellido del niño"
            android:paddingLeft="@dimen/edit_text_padding"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_between01"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_heigh"
            android:id="@+id/edad_nino"
            android:background="@drawable/roundededittext"
            android:hint="Ingresa la edad del niño"
            android:paddingLeft="@dimen/edit_text_padding"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_between02"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_next"
            android:text="Siguiente"
            android:background="@drawable/roundedbutton"/>
    </LinearLayout>

</LinearLayout>