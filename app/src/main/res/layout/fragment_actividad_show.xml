<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary01"
    tools:context=".ui.actividad.get.ActividadShowFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary01"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:paddingBottom="@dimen/actividad_padding_button_layout"
            android:paddingTop="@dimen/actividad_padding_button_layout"
            android:text="@string/actividad_muestra"
            android:textColor="@color/white"
            android:textSize="@dimen/actividad_titulo00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/actividad_container_confirm"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@drawable/customborder"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="@dimen/actividad_imagen_confirm"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/img_muestra"
            android:src="@drawable/act_null">
        </ImageView>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary01"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:paddingTop="@dimen/actividad_padding_button_layout"
            android:id="@+id/act_show_realizada"
            android:gravity="center"
            android:paddingBottom="@dimen/actividad_padding_button_layout"
            android:text="@string/actividad_realizadan"
            android:textColor="@color/white"
            android:textSize="@dimen/actividad_titulo00" />
     </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/actividad_container_confirm"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@drawable/customborder"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="@dimen/actividad_imagen_confirm"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/img_tomada"
            android:src="@drawable/act_null">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary02"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:paddingTop="@dimen/actividad_padding_button_layout"

            android:text="@string/actividad_calificacion"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title01" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary02"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:id="@+id/textView_calif"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title01" />
    </LinearLayout>

</LinearLayout>