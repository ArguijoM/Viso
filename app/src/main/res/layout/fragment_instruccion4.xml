<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/text_03"
    android:background="@color/primary01"
    tools:context=".ui.actividad.instruccion.InstruccionFragment4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_03"
        android:paddingRight="@dimen/text_02"
        android:paddingLeft="@dimen/text_02"
        android:gravity="center">
        <TextView
            android:id="@+id/instruccion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="@string/instruccion4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_04" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_03"
            android:paddingRight="@dimen/text_03"
            android:src="@drawable/img_bad">
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_03"
        android:paddingRight="@dimen/text_02"
        android:paddingLeft="@dimen/text_02"
        android:gravity="center">
        <TextView
            android:id="@+id/instruccion_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="@string/instruccion4_2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_04" />
    </LinearLayout>
</LinearLayout>