<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary02"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".herramientas.splashscreen.Cargando">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/text_03"
        android:text="Generando imagen..."
        android:id="@+id/generando_textview"
        android:fontFamily="@font/autour_one"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="252dp"
        android:layout_height="310dp"
        android:src="@drawable/gif_loading" />

</LinearLayout>